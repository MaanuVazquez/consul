<table id="budget_investments_list" class="clear activity-budget-investments">
  <thead>
    <tr>
      <td>Propuesta</td>
      <td>Viabilidad</td>
    </tr>
  </thead>
  <tbody>
    <% @budget_investments.each do |budget_investment| %>
      <tr id="budget_investment_<%= budget_investment.id %>">
        <td>
          <%= link_to budget_investment.title, budget_investment_path(budget_investment.budget, budget_investment) %>
        </td>
        <td>
          <% if budget_investment.valuation_finished &&
              budget_investment.feasibility == "feasible" %>
            Viable
          <% elsif budget_investment.valuation_finished &&
              budget_investment.feasibility == "unfeasible" %>
            Inviable
          <% elsif !budget_investment.valuation_finished ||
              budget_investment.feasibility == "undecided" %>
            No decidido
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @budget_investments %>
